server {
  listen   80;
  server_name  test;
  access_log  /test.access.log;

  location / {
    root   test;
    index  index.html index.htm index.php;

    #add headers if index.html
    if ($request_uri = "/") {
      add_header Cache-Control "no-cache, no-store, must-revalidate";
    }
  }
  
  # Block all svn access
  if ($request_uri ~* ^.*\.svn.*$) {
     return 404;
  }
  
  # Block all git access
  if ($request_uri ~* ^.*\.git.*$) {
     return 404;
  }
  
  location /nginx_status {
    stub_status on;
    access_log off;
    allow 127.0.0.1;
    deny all;
  }
  
}

server {
  listen   443;
  server_name  test;
  access_log /test-ssl.access.log;
  
  ssl on;
  ssl_certificate /ssl/test.crt;

  location / {
    root  /temp;
    index  index.html index.htm index.php;
  }
  
  # Block all svn access
  if ($request_uri ~* ^.*\.svn.*$) {
     return 404;
  }
  
  # Block all git access
  if ($request_uri ~* ^.*\.git.*$) {
     return 404;
  }
}
